{
  "manifest_version": 3,
  "name": "Resume Tracker Job Scraper",
  "version": "2.2.0",
  "description": "Advanced job description extraction with improved location parsing",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:*",
    "http://127.0.0.1:*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/viewjob*",
        "https://jobs.lever.co/*",
        "https://boards.greenhouse.io/*",
        "https://apply.workable.com/*",
        "https://jobs.smartrecruiters.com/*",
        "https://*.workday.com/*",
        "https://careers.google.com/*",
        "https://jobs.apple.com/*",
        "https://www.glassdoor.com/job-listing/*",
        "https://angel.co/company/*/jobs/*",
        "https://wellfound.com/company/*/jobs/*",
        "https://*/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Job Description"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
